{
    "name": "devsavage/slim4-authentication",
    "description": "An authentication system using Slim Framework v4",
    "type": "project",
    "version": "0.0.1",
    "license": "MIT",
    "authors": [
        {
            "name": "devsavage",
            "email": "savage@savagedev.io",
            "homepage": "https://savagedev.io",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "app/App"
        },
        "files": [
            "app/helpers.php"
        ]
    },
    "require": {
        "php": ">=8.1",
        "slim/slim": "^4.14",
        "illuminate/database": "^11.26",
        "slim/flash": "^0.4.0",
        "slim/twig-view": "^3.4",
        "slim/csrf": "^1.5",
        "vlucas/phpdotenv": "^5.6",
        "symfony/console": "^7.1",
        "robmorgan/phinx": "^0.16.5",
        "guzzlehttp/guzzle": "^7.9",
        "guzzlehttp/psr7": "^2.7",
        "usarise/turnstile": "^0.5.3",
        "respect/validation": "^2.3",
        "phpmailer/phpmailer": "^6.9",
        "mailgun/mailgun-php": "^4.3",
        "hassankhan/config": "^3.1",
        "php-di/slim-bridge": "^3.4",
        "monolog/monolog": "^3.7",
        "slim/psr7": "^1.7"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "post-root-package-install": [
        "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "require-dev": {
        "symfony/var-dumper": "^7.1"
    }
}
